<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/finish"
        motion:constraintSetStart="@id/init"
        motion:duration="1500"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/init">
        <Constraint
            android:id="@+id/signInProfileIv"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/signInTopTitle"
            motion:layout_constraintEnd_toStartOf="@+id/signInProfileIv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="@+id/signInTopView"
            android:layout_marginTop="58dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/signInPasswordEt"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            motion:layout_constraintTop_toBottomOf="@+id/signInEmailEt"
            android:layout_marginStart="32dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="26dp"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:alpha="0" />
        <Constraint
            android:id="@+id/signInBtn"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            motion:layout_constraintTop_toBottomOf="@+id/signInPasswordEt"
            android:layout_marginStart="32dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="26dp"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:alpha="0" />
        <Constraint
            android:id="@+id/signInForgotPassTv"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            motion:layout_constraintTop_toBottomOf="@+id/signInBtn"
            android:layout_marginStart="32dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="26dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/signInSocialContainer"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="20dp"
            motion:layout_constraintBottom_toTopOf="@+id/signInRedirectTv"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/signInEmailEt"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            motion:layout_constraintTop_toBottomOf="@+id/signInTopWaveView"
            android:layout_marginStart="32dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/finish">
        <Constraint
            android:id="@+id/signInTopView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="150dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/signInEmailEt"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            motion:layout_constraintTop_toBottomOf="@+id/signInTopWaveView" />
    </ConstraintSet>
</MotionScene>